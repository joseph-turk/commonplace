<% include partials/meta %>
<% include partials/header %>

  <div class="main-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>Add a Quote</h1>
        </div>
      </div>

      <form name="addQuoteForm" action="/quotes/add" method="post">
        <div class="form-group">
          <label for="quoteTitle">Title</label>
          <input type="text" class="form-control" id="quoteTitle" name="quoteTitle" placeholder="Title">
        </div>

        <div class="form-group">
          <label for="quoteBody">Quote</label>
          <textarea class="form-control" id="quoteBody" name="quoteBody" placeholder="Quote"></textarea>
        </div>

        <div class="form-group">
          <label for="quoteAuthor">Author</label>
          <input type="text" class="form-control" id="quoteAuthor" name="quoteAuthor" placeholder="Author">
        </div>

        <div class="form-group">
          <label for="quoteSource">Source</label>
          <input type="text" class="form-control" id="quoteSource" name="quoteSource" placeholder="Source">
        </div>

        <div class="form-group">
          <label for="quoteSourceAuthor">Source Author</label>
          <input type="text" class="form-control" id="quoteSourceAuthor" name="quoteSourceAuthor" placeholder="Source Author">
        </div>

        <div class="row">
          <div class="col-xs-6">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>

          <div class="col-xs-6">
            <a href="/quotes" class="btn btn-warning cancel-add">Cancel</a>
          </div>
        </div>
      </form>

    </div>
  </div>

<% include partials/footer %>
<% include partials/scripts %>
